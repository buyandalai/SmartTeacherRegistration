<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>InsertTeacher</servlet-name>
        <servlet-class>com.smart.controller.InsertTeacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayTeacher</servlet-name>
        <servlet-class>com.smart.controller.DisplayTeacher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertTeacher</servlet-name>
        <url-pattern>/InsertTeacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayTeacher</servlet-name>
        <url-pattern>/DisplayTeacher</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
